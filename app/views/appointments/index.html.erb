<h1 class="header">Welcome, <%= current_user.full_name %></h1>

<h3>Your Appointments:</h3>
<% current_user.appointments.each do |appt| %>
    <ul class="list-group">
        <li class="list-group-item">Reason for visit: <%= appt.name %> - Doctor: <%= appt.doctor.name %> - Time: <%= appt.time.to_s(:time) %> -  <%= link_to 'Cancel Appointment', appointment_path(appt), method: :delete %></li>
    </ul>   
<% end %>
<div class="btn-group">
    <%= button_to 'New Appointment', new_appointment_path, class: "btn btn-primary" %>
    <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>

</div>