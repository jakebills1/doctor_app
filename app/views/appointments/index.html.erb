<h1 class="header">Welcome, <%= current_user.full_name %></h1>

<h3>Your Appointments:</h3>
<%= button_to 'New Appointment', new_appointment_path, class: "button" %>
<% current_user.appointments.each do |appt| %>
    <ul>
    <li>Reason for visit: <%= appt.name %> - Doctor: <%= appt.doctor.name %> - Time: <%= appt.time.to_s(:time) %> -  <%= link_to 'Cancel Appointment', appointment_path(appt), method: :delete %></li>
    </ul>   
<% end %>
<%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "button" %>