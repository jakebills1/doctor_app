<h1 class="header">Welcome, <%= current_user.full_name %></h1>
<h3>Your Appointments:</h3>
<% current_user.appointments.each do |appt| %>
    <%= appt.name %> - <%= appt.doctor.name %> <%= link_to 'Cancel Appointment', appointment_path(appt), method: :delete %>
<% end %>
