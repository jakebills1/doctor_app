<div class="text-center">
    <h1>Our Doctors</h1>
    <hr />
    <%= if current_user.admin? then button_to 'Add a Doctor', new_doctor_path, method: :get, class: "btn btn-primary" end %>
</div>
<div class="card-columns">
    <% @doctors.each do |doc|%>
            <div class="card" style="width: 18rem;">
                <img src="https://robohash.org/<%= doc.specialty %>/?set=set3" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><%= doc.name %></h5>
                    <p class="card-text"><%= doc.specialty %></p>
                </div>
                <div class="card-body btn-group">
                        <%= if current_user.admin? then button_to 'Edit Doctor', edit_doctor_path(doc), method: :get, class: "btn btn-primary" end %>
                        <%= if current_user.admin? then button_to 'Remove Doctor', doctor_path(doc), method: :delete, class: "btn btn-danger" end %>
                </div>
            </div>
    
    <% end %>
</div>

















